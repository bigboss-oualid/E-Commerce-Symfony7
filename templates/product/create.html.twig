{% extends 'base.html.twig' %}

{% block title %}
    {{ 'product.create.head.title'|trans }}
{% endblock %}

{# Use the form_row Block instead of form_row from twig  #}
{# {% form_theme formView 'bootstrap_5_layout.html.twig' %}#}

{% block body %}
    <div class="container pt-5">
        <h1>{{ 'product.create.h1'|trans }}</h1>

        {# {{ form(formView) }}#}

        {{ form_start(formView) }}
        {{ form_errors(formView) }}
        <div class="row">
            <div class="col">
                {{ form_row(formView.name) }}
                {{ form_row(formView.price) }}
            </div>
            <div class="col">
                {{ form_row(formView.mainPicture) }}
                {{ form_row(formView.category) }}
                {{ form_row(formView.shortDescription) }}
            </div>
        </div>

        {#{{ form_widget(formView) }}#}

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i>
            {{ 'product.create.form.btn.create'|trans }}
        </button>
        {{ form_end(formView) }}
    </div>
{% endblock %}

