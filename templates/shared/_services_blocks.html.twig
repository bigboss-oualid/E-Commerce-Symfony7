<div class="row">
    {% for block in blocks %}
    <div class="col">
        <div class="card bg-{{ block.color }} text-white text-center">
            <div class="card-body">
                <i class="{{ block.icon}} fa-2x mb-3"></i>
                <p class="card-text">{{ block.text }}</p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>